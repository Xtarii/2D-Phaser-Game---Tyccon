{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "outDir": "./dist",

        "rootDir": "./ts.src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,

        "skipLibCheck": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false
    }
}
